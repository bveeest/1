#include <stdio.h> 
#include <math.h> 
#include <locale.h> 
#include <conio.h> 
int main() { 
    int a, b, c, d;
double x1 = 0, x2 = 0; 
    printf("a: "); scanf("%d", &a); 
    printf ("b: "); scanf("%d", &b); 
    printf("c: "); scanf("%d", &c); 


        d = (b*b) - (4 * a * c); 
        if (d < 0) printf("\a\n Нет корней! "); 
        else if (d == 0) { 
            x1 = -b / (2 / a); 
            if (b == 0 && c == 0) x1 = 0; 
            printf(" Уравнение имеет один корень: x = %ld", x1); 
        } else { 
            x1 = (-b - sqrt(d)) / (2 * a); 
            x2 = (-b + sqrt(d)) / (2 * a); 
            printf(" Уравнение имеет два корня: \n x1 = %ld\n x2 = %ld" , x1, x2); 
        } 
 
     
    return 0; 
}
